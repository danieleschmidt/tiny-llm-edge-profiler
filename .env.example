# Tiny LLM Edge Profiler Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# DEVELOPMENT ENVIRONMENT
# =============================================================================

# Enable development mode features
TINY_PROFILER_DEV_MODE=true

# Logging configuration
TINY_PROFILER_LOG_LEVEL=INFO
TINY_PROFILER_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
TINY_PROFILER_LOG_FILE=logs/tiny_profiler.log

# Debug settings
TINY_PROFILER_DEBUG=false
TINY_PROFILER_VERBOSE=false

# =============================================================================
# HARDWARE CONFIGURATION
# =============================================================================

# Default device settings
DEFAULT_PLATFORM=esp32
DEFAULT_DEVICE_PORT=/dev/ttyUSB0
DEFAULT_BAUDRATE=921600

# Device detection timeout (seconds)
DEVICE_DETECTION_TIMEOUT=10

# Firmware flashing settings
FIRMWARE_FLASH_TIMEOUT=120
FIRMWARE_ERASE_TIMEOUT=60

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Model storage paths
MODEL_CACHE_DIR=~/.cache/tiny_profiler/models
MODEL_TEMP_DIR=/tmp/tiny_profiler_models

# Model optimization settings
DEFAULT_QUANTIZATION_BITS=4
DEFAULT_GROUP_SIZE=128
MAX_MODEL_SIZE_MB=50

# Model download settings
MODEL_DOWNLOAD_TIMEOUT=300
MODEL_DOWNLOAD_RETRIES=3

# =============================================================================
# PROFILING CONFIGURATION
# =============================================================================

# Default profiling settings
DEFAULT_PROFILING_DURATION=30
DEFAULT_SAMPLE_RATE_HZ=100
DEFAULT_WARMUP_ITERATIONS=5

# Performance thresholds
MAX_INFERENCE_LATENCY_MS=1000
MIN_TOKENS_PER_SECOND=1.0
MAX_MEMORY_USAGE_PERCENT=90

# Profiling output settings
RESULTS_OUTPUT_DIR=results
REPORT_FORMAT=html
GENERATE_CHARTS=true

# =============================================================================
# POWER PROFILING
# =============================================================================

# Power measurement hardware
POWER_SENSOR_TYPE=ina219
POWER_SENSOR_I2C_ADDR=0x40
POWER_SENSOR_SHUNT_OHMS=0.1

# Power measurement settings
POWER_SAMPLE_RATE_HZ=1000
POWER_MEASUREMENT_TIMEOUT=300

# Power thresholds (milliwatts)
MAX_IDLE_POWER_MW=50
MAX_ACTIVE_POWER_MW=1000
MAX_PEAK_POWER_MW=1500

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test execution settings
TEST_TIMEOUT_SECONDS=300
TEST_HARDWARE_REQUIRED=false
TEST_PARALLEL_WORKERS=auto

# Hardware test configuration
TEST_DEVICE_PORT=/dev/ttyUSB0
TEST_DEVICE_PLATFORM=esp32
TEST_FIRMWARE_PATH=tests/fixtures/test_firmware.bin

# Test data paths
TEST_MODEL_PATH=tests/fixtures/test_model.bin
TEST_DATA_DIR=tests/fixtures

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database settings (for result storage)
DATABASE_URL=sqlite:///tiny_profiler.db
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=30

# Redis configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_TIMEOUT=5

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Web API settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=true

# API security
API_SECRET_KEY=change-this-in-production
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS settings
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Metrics collection
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Tracing configuration
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# CLOUD AND INTEGRATION
# =============================================================================

# GitHub integration
GITHUB_TOKEN=ghp_your_token_here
GITHUB_REPO=your-org/tiny-llm-edge-profiler

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption settings
ENCRYPTION_KEY=generate-a-strong-key-here
ENCRYPT_MODEL_CACHE=false

# Security scanning
ENABLE_SECURITY_SCAN=true
SECURITY_SCAN_TIMEOUT=120

# Vulnerability database
CVE_DATABASE_URL=https://cve.circl.lu/api/

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Thread pool settings
MAX_WORKER_THREADS=4
THREAD_POOL_TIMEOUT=60

# Memory management
MAX_MEMORY_USAGE_MB=1024
MEMORY_WARNING_THRESHOLD_MB=800

# Cache settings
CACHE_SIZE_MB=256
CACHE_TTL_SECONDS=3600

# =============================================================================
# PLATFORM-SPECIFIC SETTINGS
# =============================================================================

# ESP32 specific settings
ESP32_FLASH_FREQ=40m
ESP32_FLASH_MODE=dio
ESP32_FLASH_SIZE=4MB
ESP32_PSRAM_ENABLE=true

# STM32 specific settings
STM32_PROGRAMMER=st-link
STM32_FLASH_ADDRESS=0x8000000
STM32_DEBUG_INTERFACE=swd

# RP2040 specific settings
RP2040_FLASH_SIZE=2MB
RP2040_BOOTLOADER_MODE=uf2

# Nordic nRF52 specific settings
NRF52_SOFTDEVICE=s140
NRF52_DEBUG_INTERFACE=jlink

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Pre-commit hooks
PRE_COMMIT_ENABLED=true
PRE_COMMIT_AUTOUPDATE=true

# Code quality tools
ENABLE_LINTING=true
ENABLE_TYPE_CHECKING=true
ENABLE_SECURITY_LINTING=true

# Documentation generation
DOCS_AUTO_BUILD=true
DOCS_PORT=3000
DOCS_LIVE_RELOAD=true

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================

# Experimental features (use with caution)
ENABLE_EXPERIMENTAL_OPTIMIZATIONS=false
ENABLE_BETA_PLATFORMS=false
ENABLE_ADVANCED_PROFILING=false

# Feature flags
FEATURE_FLAG_POWER_PROFILING=true
FEATURE_FLAG_MULTI_DEVICE=true
FEATURE_FLAG_CLOUD_SYNC=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Container settings
CONTAINER_REGISTRY=ghcr.io
CONTAINER_NAMESPACE=your-org
CONTAINER_TAG=latest

# Production settings
PRODUCTION_MODE=false
ENABLE_CRASH_REPORTING=true
CRASH_REPORTING_DSN=https://your-sentry-dsn@sentry.io/project

# Backup settings
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30