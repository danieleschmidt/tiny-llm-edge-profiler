# Tiny LLM Edge Profiler - Environment Configuration Template
# Copy this file to .env and update values as needed

# =============================================================================
# Device Communication Settings
# =============================================================================

# Default serial port for device communication
# Linux: /dev/ttyUSB0, /dev/ttyACM0
# macOS: /dev/cu.usbserial-*, /dev/cu.usbmodem*  
# Windows: COM1, COM2, etc.
DEFAULT_SERIAL_PORT=/dev/ttyUSB0

# Default baud rate for serial communication
DEFAULT_BAUDRATE=921600

# Communication timeout in seconds
COMMUNICATION_TIMEOUT=10

# =============================================================================
# ESP32 Platform Settings
# =============================================================================

# ESP-IDF path (auto-detected if not set)
ESP_IDF_PATH=/opt/esp/esp-idf

# ESP32 flash tool (esptool.py)
ESP_FLASH_TOOL=esptool.py

# ESP32 monitor tool
ESP_MONITOR_TOOL=idf_monitor.py

# ESP32 default flash baud rate
ESP_FLASH_BAUD=460800

# =============================================================================
# STM32 Platform Settings  
# =============================================================================

# OpenOCD configuration path
OPENOCD_SCRIPTS=/usr/share/openocd/scripts

# Default STM32 OpenOCD target
STM32_OPENOCD_TARGET=stm32f7x

# STM32 flash tool
STM32_FLASH_TOOL=openocd

# =============================================================================
# Model Management
# =============================================================================

# Directory for storing quantized models
MODEL_CACHE_DIR=~/.tiny-profiler/models

# Maximum model cache size in MB
MODEL_CACHE_SIZE_MB=1024

# Default quantization bit width
DEFAULT_QUANTIZATION_BITS=4

# Model validation timeout in seconds
MODEL_VALIDATION_TIMEOUT=60

# =============================================================================
# Profiling Settings
# =============================================================================

# Default profiling duration in seconds
DEFAULT_PROFILING_DURATION=30

# Metrics collection sample rate in Hz
METRICS_SAMPLE_RATE=1000

# Maximum profiling session duration in seconds
MAX_PROFILING_DURATION=3600

# Enable power profiling by default
ENABLE_POWER_PROFILING=false

# Power sensor I2C address (for INA219/PAC1934)
POWER_SENSOR_I2C_ADDRESS=0x40

# =============================================================================
# Analysis & Reporting
# =============================================================================

# Output directory for profiling results
RESULTS_OUTPUT_DIR=./results

# Default report format (html, json, csv)
DEFAULT_REPORT_FORMAT=html

# Enable interactive charts in HTML reports
ENABLE_INTERACTIVE_CHARTS=true

# Chart resolution (width x height)
CHART_RESOLUTION=1200x800

# =============================================================================
# Development & Debugging
# =============================================================================

# Enable debug logging
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (empty for console only)
LOG_FILE=

# Enable performance tracing
ENABLE_TRACING=false

# Mock hardware for testing (when no devices available)
MOCK_HARDWARE=false

# =============================================================================
# Cloud & Integration Settings
# =============================================================================

# Enable cloud synchronization
ENABLE_CLOUD_SYNC=false

# Cloud storage provider (aws, gcp, azure)
CLOUD_PROVIDER=

# Cloud storage bucket/container name
CLOUD_STORAGE_BUCKET=

# API endpoint for cloud services
CLOUD_API_ENDPOINT=

# API authentication token
CLOUD_API_TOKEN=

# =============================================================================
# Security Settings
# =============================================================================

# Enable encrypted communication with devices
ENABLE_ENCRYPTION=false

# Device authentication key (hex string)
DEVICE_AUTH_KEY=

# Enable audit logging
ENABLE_AUDIT_LOG=false

# Audit log file path
AUDIT_LOG_FILE=~/.tiny-profiler/audit.log

# =============================================================================
# Performance Tuning
# =============================================================================

# Number of worker threads for parallel processing
NUM_WORKER_THREADS=4

# Memory limit per profiling session in MB
MEMORY_LIMIT_MB=512

# Enable caching of analysis results
ENABLE_RESULT_CACHE=true

# Cache expiration time in hours
CACHE_EXPIRATION_HOURS=24

# =============================================================================
# Hardware Power Measurement
# =============================================================================

# Power sensor type (ina219, pac1934, keysight, manual)
POWER_SENSOR_TYPE=ina219

# Shunt resistor value in ohms (for current measurement)
SHUNT_RESISTOR_OHMS=0.1

# Maximum expected current in amps
MAX_CURRENT_AMPS=1.0

# Power measurement calibration factor
POWER_CALIBRATION_FACTOR=1.0

# =============================================================================
# Continuous Integration
# =============================================================================

# CI/CD environment indicator
CI=false

# Test hardware availability in CI
CI_HARDWARE_AVAILABLE=false

# Use mock devices in CI tests
CI_USE_MOCK_DEVICES=true

# Parallel test execution in CI
CI_PARALLEL_TESTS=true

# =============================================================================
# Feature Flags
# =============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable beta platform support
ENABLE_BETA_PLATFORMS=false

# Enable advanced optimization algorithms
ENABLE_ADVANCED_OPTIMIZATION=false

# Enable machine learning-based predictions
ENABLE_ML_PREDICTIONS=false