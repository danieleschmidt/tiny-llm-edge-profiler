# EditorConfig configuration for Tiny LLM Edge Profiler
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 88

[*.{c,cpp,h,hpp}]
indent_size = 4
max_line_length = 100

[*.{js,ts,jsx,tsx}]
indent_size = 2
max_line_length = 100

[*.{yml,yaml}]
indent_size = 2
max_line_length = 120

[*.{json,jsonc}]
indent_size = 2
max_line_length = 120

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = 80

[*.{rst,txt}]
max_line_length = 80

[Makefile]
indent_style = tab
indent_size = 4

[*.{bat,cmd}]
end_of_line = crlf

[*.sh]
indent_size = 2

[*.toml]
indent_size = 2

[*.ini]
indent_size = 2

[*.cfg]
indent_size = 2

[*.xml]
indent_size = 2

[*.svg]
insert_final_newline = false

[*.{png,jpg,jpeg,gif,ico,pdf}]
insert_final_newline = false
trim_trailing_whitespace = false